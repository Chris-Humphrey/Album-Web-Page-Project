    <% include partials/template/head.ejs %>
    
    <div class="flex-container">
        <div class="row">

            <% albums.forEach(albumObj => { %>
                <div class="col-6 mb-3">
                    <img class="w-75 image" src="../images/<%= albumObj.coverArt %>">
                </div>
                <div class="col-6 mb-3">
                    <p><b>Album Name:</b> <%= albumObj.albumTitle %></p>
                    <p><b>Release Date:</b> <%= albumObj.releaseDate %></p>
                    <p><b>Summary:</b> <%= albumObj.summary %></p>
                    <p><b>Tracks:</b></p>
                    <ol>
                        <% tracks.forEach(tracks => { %>
                            <li><%= tracks %></li>
                        <% }) %>
                    </ol>
                </div>
            <% }) %>

        </div>
    </div>
    
<% include partials/template/foot.ejs %>